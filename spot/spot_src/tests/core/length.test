. ./defs || exit 1

set -e

len()
{
  test `run 0 ../length "$1"` = $2
  test `run 0 ../length -b "$1"` = $3
}

len 'a U Xc'      4 4
len 'a&b&c'       5 1
len 'a|b|c'       5 1
len '!a|b|!c'     7 1
len '!(!a|b|!c)'  8 1
len '!X(!a|b|!c)' 9 3
len 'Xa|(b|c)'    6 4
len 'Xa&(b|c)'    6 4
