. ./defs || exit 1

set -e

checkopt_noparse()
{
    cat >exp
    run 0 ltlgrind --sort "$@" > out
    diff exp out
}

checkopt()
{
    checkopt_noparse "$@"
    # The result must be parsable
    ltlfilt out
}

checkopt -f 'Xp1 U (p4 | (p3 xor (p4 W p0)))' <<EOF
1
Xp1
Xp1 U p4
Xp1 U (p3 | p4)
p4 | (p3 xor (p4 W p0))
