. ./defs
set -e

cat >input<<EOF
(a -> b) & (b -> d)
(a -> b) & Xc & (b -> d)
GF((a | b) & (b | d))
{((a -> b) & (b -> d))*;a*}<>->((a | b) & (!b | !a))
EOF

# Make sure --boolean-to-isop works as expected...
run 0 ltlfilt --boolean-to-isop input > output

cat> expected<<EOF
(!a & !b) | (b & d)
(!a | b) & (!b | d) & Xc
GF(b | (a & d))
{{{!a && !b} | {b && d}}[*];a[*]}<>-> ((!a & b) | (a & !b))
EOF

cat output
diff output expected

# Make sure it would not give the same output without the option...
run 0 ltlfilt input > output

cat> expected<<EOF
(a -> b) & (b -> d)
(a -> b) & (b -> d) & Xc
GF((a | b) & (b | d))
{{{a -> b} && {b -> d}}[*];a[*]}<>-> ((a | b) & (!a | !b))
EOF

cat output
diff output expected
